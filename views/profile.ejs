<% include ./Partials/Header.ejs %>

<div class="profile w-full min-h-screen bg-zinc-800 text-white pt-1">
    <form id="uploadDp" hidden action="/fileUpload" method="post" enctype="multipart/form-data">
        <input type="file" name="image">
    </form>
    <div class="profDet flex gap-2 flex-col items-center justify-center mt-20">
        <div class="relative">
            <span id="imageUpload" class="w-8 h-8 absolute bottom-0 right-0 rounded-full flex items-center justify-center bg-white text-black ">
                <i class="ri-pencil-fill"></i>
             </span>
            <div class="w-32 h-32 bg-zinc-100 rounded-full overflow-hidden">
                <img class="h-full w-full object-cover" src="/images/uploads/<%=user.profileImage %>" alt="">
            </div>
        </div>
        <h1 class="text-2xl  font-semibold "><%=user.name %></h1>
        <h2 class="text-md font-semibold">@<%= user.username %></h2>
        <a href="/edit" class="px-7 py-3 bg-zinc-700 rounded-full font-semibold"> edit</a>
        <a href="/add" class="px-7 py-3 bg-red-700 rounded-full font-semibold mt-5" >Add New Post</a>
    </div>
    <div class="cards flex flex-wrap gap-10 px-20 mt-10">
        <div class="card">

            <div class="w-52 h-40 bg-zinc-100 rounded-lg overflow-hidden">
                <img class="w-full h-full object-cover" src="/images/uploads/<%= user?.posts[0]?.image %>" alt="">
            </div>
            <a href='/show/posts' class="text-xl font-semibold mt-3 text-blue-500">your Uploaded Pins</a>
            <h4 class="font-semibold font-medium opacity-60"><%= user.posts.length %> Pins</h4>
        </div>
    </div>
</div>


<script>
    document.querySelector('#imageUpload').addEventListener("click", function(){
        document.querySelector('#uploadDp input').click()
    })
    document.querySelector('#uploadDp input').addEventListener("change", function(){
        document.querySelector('#uploadDp').submit();
    })
</script>

<% include ./Partials/Footer.ejs %>