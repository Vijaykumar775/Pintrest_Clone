<% include ./Partials/Header.ejs %>

<div class="w-full min-h-screen bg-zinc-800 px-20 py-5 text-white font-semibold">
    <h1 class="text-2xl font-semibold mt-10">Create a New Post</h1>
     <hr class="opacity-10 mt-5">
     <form action="/postImg" method="post" enctype="multipart/form-data">
        <input class="block w-1/3 px-3 py-2 mt-5" type="file" name="postImage">
        <input class="text-black block w-1/3 px-3 py-2 mt-5 border-2  rounded-xl" type="text" placeholder="Title" name="title">
        <textarea class="text-black block w-1/3 px-3 py-2 mt-5 border-2 rounded-xl" type="text" placeholder="Description" name="desc"></textarea>
        <input class="block w-1/3 px-3 py-2 mt-5 rounded-full bg-red-600 hover:bg-red-500 cursor-pointer" type="submit" value="Create Post">
     </form>
</div>

